<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

        <ImageView
            android:id="@+id/logoSupport"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/brandListSupport"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/logoSupport"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="30dp">

            <ImageView
                android:visibility="gone"
                android:id="@+id/mastercardDetails"
                android:src="@drawable/mastercard"
                android:layout_width="60dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/mirDetails"
                android:src="@drawable/mir"
                android:layout_width="60dp"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/vizaDetails"
                android:src="@drawable/viza"
                android:layout_width="60dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/qiwiDetails"
                android:src="@drawable/qiwi"
                android:layout_width="40dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/yandexDetails"
                android:src="@drawable/yandex"
                android:layout_width="60dp"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/cashDetails"
                android:src="@drawable/cash"
                android:layout_width="40dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/brandListSupport"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/btnOformitDetails"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOformitDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:background="@color/orange"
            android:textSize="18sp"
            android:text="Оформить"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>