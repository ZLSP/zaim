<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main_fragments.StartFragment">



    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/textCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:text=" Приложение создано для подбора онлайн
\n кредитов, займов и карт.
\n Используя приложение 'Беспроцентные
\n займы онлайн' Вы подтверждаете, что
\n принимаете и ознакомились с"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chechPrivacy"/>

    <TextView
        android:id="@+id/btnPrivacyLink"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:background="@null"
        android:text="@string/f_start_privacy"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textCenter" />

    <CheckBox
        android:checked="true"
        android:id="@+id/chechPrivacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btnGo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Я принимаю пользовательское соглашение"
        android:layout_marginBottom="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGo"
        android:text="принять"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:stateListAnimator="@null"/>

</androidx.constraintlayout.widget.ConstraintLayout>